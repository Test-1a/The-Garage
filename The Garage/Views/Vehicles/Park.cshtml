@model The_Garage.Models.Vehicles

@{
    ViewData["Title"] = "Park a Vehicle";
}

    <h1>Park a Vehicle</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Park">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegNr" class="control-label"></label>
                <input asp-for="RegNr" class="form-control" />
                <span asp-validation-for="RegNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOfParking" class="control-label"></label>
                <input asp-for="TimeOfParking" class="form-control" />
                <span asp-validation-for="TimeOfParking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumnOfWheels" class="control-label"></label>
                <input asp-for="NumnOfWheels" class="form-control" />
                <span asp-validation-for="NumnOfWheels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type.TypeOfVehicle" class="control-label"></label>
                <select asp-for="Type.TypeOfVehicle" class ="form-control" asp-items="ViewBag.TypeOfVehicle"></select>
            </div>
            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <select asp-for="Member.FirstName" class ="form-control" asp-items="ViewBag.FirstName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Park" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
